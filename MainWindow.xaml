<Window x:Class="WpfClipboardTextTyper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClipboardTextTyper"
        mc:Ignorable="d"
        Title="ClipboardTextTyper" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="WindowControlButton" TargetType="Image">
            <Style.Setters>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Stretch" Background="#FF252526" MouseLeftButtonDown="DragMoveApp">
            <StackPanel.Resources>
                <Style TargetType="Border" x:Key="NiceBorder">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="CornerRadius" Value="2"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderThickness" Value="1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>
            <Border Style="{StaticResource NiceBorder}">
                <Image Name ="bExit" MouseLeftButtonDown="CloseApp" ToolTip="Выйти">
                    <Image.Style>
                        <Style TargetType="Image" BasedOn="{StaticResource WindowControlButton}">
                            <Setter Property="Source" Value="Images/bExitNotSelected.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=bExit}" Value="True">
                                    <Setter Property="Source" Value="Images/bExitSelected.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Border>
            <Border Style="{StaticResource NiceBorder}" Margin="1 0 0 0">
                <Image Source="Images/bMinimizeNotSelected.png" MouseLeftButtonDown="MinimizeApp" ToolTip="Свернуть" Style="{StaticResource WindowControlButton}"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
